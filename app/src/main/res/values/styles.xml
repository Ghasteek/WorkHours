<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackgroundLight</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="itemTextColor">@color/itemTextColor</item>
        <item name="itemIconTint">@color/itemIconTint</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <!-- RED Progress Bar-->
    <style name="AppTheme.Red">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- PURPLE Progress Bar-->
    <style name="AppTheme.Purple">
        <item name="colorAccent">@color/colorPurple</item>
    </style>


    <!-- Dark application theme. -->
    <style name="AppDarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="android:windowBackground">@color/darkColorBackground</item>
        <item name="android:textColor">@color/darkPrimaryText</item>
        <item name="itemTextColor">@color/darkItemTextColor</item>
        <item name="itemIconTint">@color/darkItemIconTint</item>
        <item name="android:editTextColor">@color/darkEditTextColor</item>
        <item name="android:editTextBackground">@color/darkEditTextBackground</item>
        <item name="android:popupBackground">@color/darkPopUpBackground</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemDarkStyle</item>
    </style>

    <style name="AppDarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="darkDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/darkEditTextBackground</item>
        <item name="android:textColor">@color/darkPopupTextColor</item>
        <item name="android:textColorPrimary">@color/darkPopupTextColor</item>
    </style>

    <style name="mySpinnerItemDarkStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/darkSpinnerTextColor</item>
        <item name="android:background">@color/darkEditTextBackground</item>
        <item name="android:windowBackground">@color/darkEditTextBackground</item>
        <item name="android:checkMark">@drawable/triangle</item>
    </style>

    <style name="AppDarkTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppDarkTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="colorPrimary">@color/darkColorPrimaryDark</item>
    </style>

    <!-- RED Progress Bar-->
    <style name="AppDarkTheme.Red">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- PURPLE Progress Bar-->
    <style name="AppDarkTheme.Purple">
        <item name="colorAccent">@color/colorPurple</item>
    </style>

</resources>
